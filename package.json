{
  "name": "server",
  "version": "1.0.0",
  "author": "Nestor Cortina",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/app.ts",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write src",
    "doc": "typedoc --out docs ./src",
    "nc": "ncu",
    "ncu": "ncu -u",
    "upgrade": "npm update --save-dev && npm update --save",
    "prebuild": "rimraf build",
    "build": "webpack --config webpack.config.ts",
    "postbuild": "ts-node-script lib/build.ts",
    "clean:pkg": "rimraf pkg",
    "build:pkg-linux": "pkg build/package.json --target node14-linux-x64",
    "build:pkg-win": "pkg build/package.json --target node14-win-x64",
    "pkg:win": "npm-run-all build clean:pkg build:pkg-win",
    "pkg:linux": "npm-run-all build clean:pkg build:pkg-linux"
  },
  "bin": "./server.js",
  "pkg": {
    "scripts": "server.js",
    "outputPath": "./pkg"
  },
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.14.2",
    "fastify-compress": "^3.4.2",
    "fastify-cors": "^5.2.0",
    "fastify-helmet": "^5.3.1"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/fs-extra": "^9.0.10",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "copy-webpack-plugin": "^8.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-tsdoc": "^0.2.11",
    "fs-extra": "^9.1.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.4.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.5.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^2.5.2"
  }
}
