{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "config": ["config"],
      "helpers/*": ["helpers/*"],
      "interfaces/*": ["interfaces/*"],
      "jobs/*": ["jobs/*"],
      "lib/*": ["lib/*"],
      "loaders/*": ["loaders/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"]
    }
  },
  "include": ["src"]
}
